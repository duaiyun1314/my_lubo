<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="themedTextColorPrimary">@color/lightTextPrimary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryForDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkForDark</item>
        <item name="colorAccent">@color/colorAccentForDark</item>
        <item name="themedTextColorPrimary">@color/darkTextPrimary</item>
    </style>

    <style name="Theme.Basic" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--屏蔽原始actionbar 使用toolbar-->
        <item name="windowActionBar">false</item>
        <!--不显示window的title-->
        <item name="windowNoTitle">true</item>
        <!--窗体是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗体内容背景-->
        <item name="android:windowContentOverlay">@null</item>
        <!--toolbar 背景色-->
        <item name="colorPrimary">@color/toolbarColor</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/statusColor</item>
        <!--actionmode 背景色-->
        <item name="actionModeBackground">?colorPrimary</item>
        <!--checkbox button 选中的颜色-->
        <item name="colorAccent">#3c69ce</item>
        <!--自定义属性 ：list标题颜色-->
        <item name="titleColor">?colorPrimary</item>
        <!--自定义属性：list副标题颜色-->
        <item name="subTitleColor">#5d5b5b</item>
        <!--文本颜色-->
        <item name="android:textColor">@color/textColor</item>
        <item name="textSelectColor">#ff0000</item>
        <!--toolbar主题-->
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>


    </style>
    <style name="Theme.Basic.TEAL">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#009688</item>
